<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <%= will_paginate @users,list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
  <% @users.each do |user| %>
  <ul class="listing">
    <div class="row col-12">
      <div class="card col-lg-6 offset-3">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small>
          <%= pluralize(user.articles.count, "article") if user.articles %>
        </small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate @users,list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>
</div>

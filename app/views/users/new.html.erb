<h1 align="center">Signup for Alpha Blog</h1>
<div class="form group-row">

  <%= render 'shared/errors', obj: @user %>

  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "form control col-sm-2 offset-2" %>
    <div class="col-sm-8 offset-2">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :email, class: "form control col-sm-2 offset-2" %>
    <div class="col-sm-8 offset-2">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form control col-sm-2 offset-2" %>
    <div class="col-sm-8 offset-2">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col col-sm-8 offset-2">
      <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

  <% end %>

  <div class="col-sm-12 text-center">
    [<%= link_to "Cancel request and return back to articles", articles_path %>]
  </div>
</div>

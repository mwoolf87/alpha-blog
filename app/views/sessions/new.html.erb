<h1 align="center">Log in</h1>


<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
<div class="form-group">
  <%= f.label :email, class: "form control col-sm-2 offset-2" %>
  <div class="col-sm-8 offset-2">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
  </div>
</div>


<div class="form-group">
  <%= f.label :password, class: "form control col-sm-2 offset-2" %>
  <div class="col-sm-8 offset-2">
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
  </div>
</div>

<div class="form-group">
  <div class="col col-sm-8 offset-2">
    <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<% end %>

<div class="col-sm-12 text-center">
  [<%= link_to "Cancel request and return back to articles", articles_path %>]
</div>

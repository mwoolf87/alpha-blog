<div class="form group-row">

  <%= render 'shared/errors', obj: @article %>

  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "form control col-sm-2 offset-2" %>
    <div class="col-sm-8 offset-2">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :description, class: "form control col-sm-2 offset-2" %>
    <div class="col-sm-8 offset-2">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col col-sm-8 offset-2">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

  <% end %>

  <div class="col-sm-12 text-center">
    [<%= link_to "Cancel request and return back to articles", articles_path %>]
  </div>
</div>

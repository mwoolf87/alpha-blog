<div class="form group-row col-12">

<% if @article.errors.any? %>
  <div class="form control col-sm-10">
    <div class="alert alert-danger">
        <h2 class="alert-heading">
          <%= pluralize(@article.errors.count, "error") %>
          prohibited this article from being saved:
        </h2>
        <div class="alert-body">
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <%= f.label :title, class: "form control col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>
</div>


<div class="form-group">
  <%= f.label :description, class: "form control col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
  </div>
</div>

<div class="form-group">
  <div class="col col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<% end %>

<div class="col-sm-12 text-center">
  [<%= link_to "Cancel request and return back to articles", articles_path %>]
</div>
</div>
